<div class="well">
  <h3>Edit Profile</h3>
  <form action="/profile/edit/?_method=PUT" method="POST">
    <div class="form-group">
      <label for="authName">Name</label>
      <input id="authName" class="form-control" type="text" name="name" placeholder="<%= user.name %>">
    </div>
  
    <div class="form-group">
      <label for="authEmail">Email</label>
      <input id="authEmail" class="form-control" type="email" name="email" placeholder="<%=user.email%>">
    </div>
  
    <div class="form-group">
      <label for="authPassword">Password</label>
      <input id="authPassword" class="form-control" type="password" name="password">
    </div>
    
    <div class="form-group">
      <label for="authImage">Image Link</label>
      <input id="authImage" class="form-control" type="text" name="img" placeholder="<%= user.img %>">
    </div>

    <input class="btn btn-primary" type="submit">
  </form>
</div>
